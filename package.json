{
  "name": "rollup-plugin-summary",
  "version": "0.0.0-semantically-released",
  "description": "A rollup plugin that summarizes the build",
  "main": "index.js",
  "typings": "index.d.ts",
  "repository": "https://github.com/yousifalraheem/rollup-plugin-summary.git",
  "homepage": "https://yousifalraheem.github.io/rollup-plugin-summary/",
  "bugs": {
    "url": "https://github.com/yousifalraheem/rollup-plugin-summary/issues"
  },
  "author": "Yousif Al-Raheem <yousifalraheem@gmail.com>",
  "license": "MIT",
  "keywords": [
    "rollup",
    "plugin",
    "size",
    "file",
    "filesize",
    "summary",
    "table"
  ],
  "files": [
    "index.js",
    "index.js.map",
    "index.d.ts"
  ],
  "scripts": {
    "prebuild": "rm -rf dist/*",
    "build": "rollup -c",
    "postbuild": "node scripts/pre-release.js",
    "build:docs": "node scripts/pre-docs.js",
    "pretest": "rm -rf coverage/*",
    "test": "jest --coverage",
    "lint": "eslint .",
    "test:project": "npm test --prefix test-project",
    "release": "semantic-release",
    "commit": "cz",
    "prepare": "husky install",
    "format:check": "prettier --check .",
    "format:all": "prettier --write ."
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/jest": "^27.4.1",
    "babel-jest": "^27.5.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.3",
    "fs-extra": "^10.0.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "rollup": "^2.28.2",
    "rollup-plugin-node-externals": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^19.0.2"
  },
  "dependencies": {
    "as-table": "^1.0.55",
    "chalk": "^5.0.1",
    "rollup-plugin-filesize": "^9.0.2"
  },
  "peerDependencies": {
    "as-table": "^1.0.55",
    "rollup": "^2.0.0",
    "rollup-plugin-filesize": "^9.0.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "pkgRoot": "dist"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=8.3.0"
  }
}
